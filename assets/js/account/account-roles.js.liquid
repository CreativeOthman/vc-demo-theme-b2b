angular.module('storefront.account')
.component('vcAccountRoles', {
    templateUrl: "themes/assets/account-roles.tpl.liquid",
    controller: ['$scope', 'authService', 'loadingIndicatorService', function ($scope, authService, loader) {
        var ctrl = this;
        ctrl.loader = loader;

        ctrl.rolesComponent = null;

        ctrl.logins = authService.userLogin ? [authService.userLogin] : [];
        $scope.$on('loginStatusChanged', function(e, authContext) {
            if (!ctrl.logins.length)
                ctrl.logins = [authContext.userLogin];
        });
    }]
});
