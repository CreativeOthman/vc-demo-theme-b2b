<ng-controller ng-controller="productController">
    {% if product.variants.size == 1 %}
        {% include 'product/main' %}
    {% else %}
        {% include 'product/variations' %}
    {% endif %}
</ng-controller>

<script>
    window.product = {
        id: "{{ product.id }}",
        catalogId: "{{ product.catalog_id }}",
        categoryId: "{{ product.category_id }}"
    };
</script>
