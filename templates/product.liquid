<div class="toolbar clearfix">
    {% include 'shared/breadcrumb' %}
</div>
<div class="product-page clearfix" itemscope itemtype="http://schema.org/Product" ng-controller="productController">
    <meta itemprop="url" content="{{ product.url | absolute_url}}">
    <meta itemprop="image" content="{{ product.featured_image.src | img_url }}">

    <div class="product-content">
        <a href="#" class="product-brand">{{ product.metafields.properties['Brand'] }}</a>
        <h1>{{ product.title }}</h1>
        <ul class="product-sku list-unstyled">
            <li>
                {{ 'products.product.sku' | t }}&nbsp;<span itemprop="productID">    {{ product.selected_variant.sku }}</span>
            </li>
            <li>
                {{ 'products.product.mmn' | t }}&nbsp;<span itemprop="model">{{ product.metafields.properties['MMN'] }}</span>
            </li>
            <li>
                UNSPSC # <span>41112701</span>
            </li>
        </ul>
        <div class="product clearfix">
            <div class="product-img col-md-4">
                {% if product.featured_image %}
                <img ng-src="{{ product.featured_image.src | img_url: "168x168" }}" fallback-src="{{ product.featured_image.src | img_url }}" alt="{{ product.featured_image.alt | escape }}" />
                {% else %}
                <img src="{{ 'no-image.svg' | asset_url }}" class="no-image" />
                {% endif %}
                <div class="compare">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox">
                            <span class="switch"></span>
                            <span class="name">Compare</span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="product-info col-md-8">
                <form>
                    <div class="product-price clearfix">
                        <div class="price col-md-5">
                            {% if customer %}
                                <div class="price-label">{{ 'products.price.private' | t }}</div>
                            {% else %}
                                <div class="price-label">{{ 'products.price.public' | t }}</div>
                            {% endif %}
                            <div class="price-value">
                                {% if settings.show_prices_with_taxes %}
                                    {% include 'product/price', price: product.price_with_tax %}
                                {% else %}
                                    {% include 'product/price', price: product.price %}
                                {% endif %}
                            </div>
                            <!-- TODO: Replace with product unit -->
                            <div class="price-unit">/ each</div>
                        </div>
                        <div class="reorder col-md-7">
                            <div>
                                <div class="radio radio-inline">
                                    <label>
                                        <input name="reorder" type="radio">
                                        <span class="switch"></span>
                                        <span class="name">Auto-Reorder Every</span>
                                    </label>
                                </div>
                                <ul class="nav nav-pills">
                                    <li class="dropdown">
                                        <a id="sort" href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Top sellers <span class="fa fa-angle-down"></span></a>
                                        <ul class="dropdown-menu" aria-labelledby="sort">
                                            <li>
                                                <a href="#">Brand: A to Z</a>
                                            </li>
                                            <li>
                                                <a href="#">Brand: Z to A</a>
                                            </li>
                                            <li>
                                                <a href="#">Brand: Z to A</a>
                                            </li>
                                            <li>
                                                <a href="#">Price: Low to High</a>
                                            </li>
                                            <li>
                                                <a href="#">Price: High to Low</a>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                            <div class="form-group">
                                <div class="radio">
                                    <label>
                                        <input name="reorder" type="radio">
                                        <span class="switch"></span>
                                        <span class="name">Deliver one time only</span>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group group-flex">
                                <input type="text" class="form-control qty">
                                <button class="btn btn-primary">Add to cart</button>
                            </div>
                            <a href="#" class="add-to-list"><i class="fa fa-plus"></i> Add to list</a>
                            <div class="form-group">
                                <p>Confirm ZIP Code to determine availability.</p>
                                <div class="form-group group-flex">
                                    <input type="text" class="form-control">
                                    <button class="btn btn-default">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="product-review">
                        <div class="product-rating">
                            <img src="https://static.grainger.com/images/ratings/rating-0_0.gif" alt="">
                        </div>
                        <a href="#">Be the first to write a review</a>
                    </div>
                </form>
            </div>
        </div>
        {% if product.properties.size > 1  %}
            <div class="tech-spec clearfix">
                <h2>Technical Specs</h2>
                {% assign half_of_properties = product.properties.size | divided_by: 2 %}
                <ul class="col-md-6">
                    {% for property in product.properties limit:half_of_properties %}
                        <li>
                            <div class="tech-name col-md-4">{{ property.name }}</div>
                            <div class="tech-value col-md-8">{{ property.value }}</div>
                        </li>
                    {% endfor %}
                </ul>
                <ul class="col-md-6">
                    {% for property in product.properties offset:half_of_properties %}
                        <li>
                            <div class="tech-name col-md-4">{{ property.name }}</div>
                            <div class="tech-value col-md-8">{{ property.value }}</div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
    </div>
</div>

{% comment %}
    <!--default product images if product doesn't no have variations or variation not selected also it for search craulers-->
    <div ng-if="!selectedVariation.id" class="grid-item large--two-fifths">
        <div class="grid">
            <div class="grid-item large--eleven-twelfths text-center">
                <div class="product-photo-container" id="productPhoto">
                    {% assign featured_image = product.selected_or_first_available_variant.featured_image | default: product.featured_image %}
                    <img ng-if="!product.primaryImage" id="productPhotoImg" ng-src="{{ featured_image | img_url: "348x348" }}" fallback-src="{{ featured_image | img_url }}" alt="{{ featured_image.alt | escape }}" {% if settings.product_image_zoom_enable %} data-zoom="{{ featured_image | img_url }}" {% endif %}>
                </div>
                {% if product.images.size > 1 %}
                <ul class="product-photo-thumbs grid-uniform" id="productThumbs">
                    {% for image in product.images %}
                    <li class="grid-item medium--down-one-quarter large--one-quarter">
                        <a href="{{ image.src | img_url }}" class="product-photo-thumb">
                            <img ng-src="{{ image.src | img_url: "64x64" }}" fallback-src="{{ image.src | img_url }}" alt="{{ image.alt | escape }}">
                        </a>
                    </li>
                    {% endfor %}
                </ul>
                {% endif %}
            </div>
        </div>
    </div>
    <!--angular block for display images for selected variation -->
    <ng-include ng-if="selectedVariation.id" src="'storefront.product-images.tpl'"></ng-include>

    <div class="grid-item large--three-fifths">
        <h2 itemprop="name">{{ product.title }}</h2>

        <div itemprop="offers" itemscope itemtype="http://schema.org/Offer">

            {% assign variant = product.selected_or_first_available_variant %}

            <meta itemprop="priceCurrency" content="{{ shop.currency }}">
            <meta itemprop="price" content="{{ variant.price | money }}">

            {% if settings.product_vendor_enable %}
            <p class="product-meta" itemprop="brand">{{ product.vendor }}</p>
            {% endif %}
            
            {% if customer %}
            <ul class="inline-list product-meta">
                <li ng-if="!selectedVariation.id">
                    {% if product.compare_at_price > product.price %}
                    {% if settings.show_prices_with_taxes %}
                    <span class="old">
                        {% include 'price' with variant.compare_at_price_with_tax %}
                    </span>
                    <span id="comparePrice" class="sale-tag large">
                        {% assign compare_price = variant.compare_at_price_with_tax %}
                        {% assign product_price = variant.price_with_tax %}
                        {% include 'price-sale' %}
                    </span>
                    {% else %}
                    <span class="old">
                        {% include 'price' with variant.compare_at_price %}
                    </span>
                    <span id="comparePrice" class="sale-tag large">
                        {% assign compare_price = variant.compare_at_price %}
                        {% assign product_price = variant.price %}
                        {% include 'price-sale' %}
                    </span>
                    {% endif %}
                    {% endif %}
                    <span id="productPrice" class="h1">
                        {% if settings.show_prices_with_taxes %}
                        {% include 'price' with variant.price_with_tax %}
                        {% else %}
                        {% include 'price' with variant.price %}
                        {% endif %}
                    </span>
                </li>
                <!--For sku-selector variations switches-->
                <li ng-if="selectedVariation.id">
                    {% if settings.show_prices_with_taxes %}
                    <span ng-if="selectedVariation.price.discountAmountWithTax.amount > 0" class="old">
                        <small ng-bind="selectedVariation.price.listPriceWithTax.formattedAmount"></small>
                    </span>
                    <span ng-if="selectedVariation.price.discountAmountWithTax.amount > 0" id="comparePrice" class="sale-tag large" ng-bind="'{{ 'products.general.save_html' | t }}' + selectedVariation.price.discountAmountWithTax.formattedAmount">
                    </span>
                    <span id="productPrice" class="h1">
                        <small ng-bind="selectedVariation.price.actualPriceWithTax.formattedAmount"></small>
                    </span>
                    <span>Inc VAT</span>
                    {% else %}
                    <span ng-if="selectedVariation.price.discountAmount.amount > 0" class="old">
                        <small ng-bind="selectedVariation.price.listPrice.formattedAmount"></small>
                    </span>
                    <span ng-if="selectedVariation.price.discountAmount.amount > 0" id="comparePrice" class="sale-tag large" ng-bind="'{{ 'products.general.save_html' | t }}' + selectedVariation.price.discountAmount.formattedAmount">
                    </span>
                    <span id="productPrice" class="h1">
                        <small ng-bind="selectedVariation.price.actualPrice.formattedAmount"></small>
                    </span>
                    {% endif %}
                </li>

                {% if settings.product_reviews_enable %}
                <li class="product-meta--review">
                    <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
                </li>
                {% endif %}
            </ul>
            {% else %}
            <a class="btn" href="{{ '/account/login' | absolute_url }}">{{ 'products.product.sign_in_to_see_price' | t }}</a>
            {% endif %}

            <hr id="variantBreak" class="hr--clear hr--small">

            <link itemprop="availability" href="http://schema.org/{% if product.available %}InStock{% else %}OutOfStock{% endif %}">

            <form action={{ '/cart/add' | absolute_url }}" method="post" enctype="multipart/form-data" id="addToCartForm">

                <div class="product-sku">
                    <div ng-repeat="(propName, props) in allVariationPropsMap">
                        <p ng-bind="propName"></p>
                        <ul class="size">
                            <li ng-repeat="prop in props" ng-class="{'active': prop.selected}">
                                <a href="" ng-click="checkProperty(prop)" ng-bind="prop.value ? prop.value : 'undef'"></a>
                            </li>
                        </ul>
                    </div>
                    <h1 ng-bind="product.Id"></h1>
                </div>
                {% if shop.subscription_enabled %}
                <div class="note" ng-if="selectedVariation.paymentPlan">
                    <span ng-bind="'Subscription with a period: ' + selectedVariation.paymentPlan.intervalCount + ' ' + selectedVariation.paymentPlan.interval"></span>
                </div>
                {% endif %}
                {% if settings.product_quantity_enable %}
                <label for="quantity" class="quantity-selector">{{ 'products.product.quantity' | t }}</label>
                <input type="number" id="quantity" name="quantity" value="1" min="1" class="quantity-selector">
                {% endif %}
                {% if customer != null %}
                <button type="button" name="add" id="addToCart" class="btn btn-clearfix AddShopCart" ng-disabled="!selectedVariation.id || !selectedVariation.isAvailable" ng-click="addProductToCart(selectedVariation, 1)" interactor-arg="{{ product.id }}">
                    <span class="icon icon-cart"></span>
                    <span id="addToCartText">{{ 'products.product.add_to_cart' | t }}</span>
                </button>
                {% endif %}
                {% if shop.quotes_enabled %}
                <button class="btn btn-clearfix" id="addToQuote" type="button" ng-if="selectedVariation.isQuotable" ng-disabled="!selectedVariation.id" ng-click="addProductToActualQuoteRequest(selectedVariation, 1)">
                    <span class="fa fa-calculator"></span>
                    {{ 'products.general.add_to_quote' | t }}
                </button>
                {% endif%}
                {% if customer != null and settings.product_compare_enabled %}
                    <button class="btn btn-clearfix" type="button" ng-click="addProductToCompareList('{{ product.id }}', $event)" ng-controller="productCompareListController">
                        <span class="fa fa-bar-chart"></span>
                        <span>{{ 'products.compare_list.add_to_compare' | t }}</span>
                    </button>
                {% endif %}
                 <button id="addToWishlist" class="btn btn-clearfix list-btn-alignment" type="button" 
                         ng-show="customer.isRegisteredUser"
                         ng-disabled="buttonInvalid"
                         ng-click="addProductToWishlist(selectedVariation,$scope.listContains)">
                      <span class="fa fa-file-text list-icon-clearfix"></span>
                      <span>{{ 'products.list.add_to_myList' | t }}</span>                      
                 </button>                
                <span id="variantQuantity" class="variant-quantity"></span>
            </form>
            <hr>
        </div>
        <div class="product-description rte" itemprop="description">
            {{ product.description }}
        </div>
        {% if settings.social_sharing_products %}
        {% include 'social-sharing' %}
        {% endif %}

        {% if product.properties.size > 1  %}
        <ul class="tabs">
            <li class="active">
                <a href="#">{{ 'products.product.details_tab' | t }}</a>
            </li>
        </ul>
        <div class="tab-cnt">
            <div class="tab">
                <div class="properties">
                    {% for property in product.properties %}
                    <dl>
                        <dt>{{ property.name }}</dt>
                        <dd>{{ property.value }}</dd>
                    </dl>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>

<script>
    window.products = [];
    window.products.push({
        id: "{{ product.id }}",
        catalogId: "{{ product.catalog_id }}",
        categoryId: "{{ product.category_id }}"
    });
</script>

<!--Template for variation images-->
<script id="storefront.product-images.tpl" type="text/ng-template">
    <div class="grid-item large--two-fifths">
        <div class="grid">
            <div class="grid-item large--eleven-twelfths text-center">
                <div class="product-photo-container" id="productPhoto">

                    <img id="productPhotoImg" fallback-src="{% raw %}{{selectedVariation.primaryImage.url}}{% endraw %}" ng-src="{% raw %}{{selectedVariation.primaryImage.url|imgurl:'348x348'}}{% endraw %}" alt="{% raw %}{{ selectedVariation.primaryImage.alt }}{% endraw %}" ng-if="selectedVariation.primaryImage">

                    <div class="no-product-image" ng-if="!selectedVariation.primaryImage">
                        <img src="{{ 'no-image.svg' | asset_url }}" />
                    </div>
                </div>
                <ul ng-if="selectedVariation.images.length > 0" class="product-photo-thumbs grid-uniform" id="productThumbs">
                    <li class="grid-item medium--down-one-quarter large--one-quarter" ng-repeat="image in selectedVariation.images">
                        <a href="" ng-click="selectedVariation.primaryImage = image" class="product-photo-thumb">
                            <img fallback-src="{% raw %}{{image.url}}{% endraw %}" ng-src="{% raw %}{{image.url|imgurl:'64x64'}}{% endraw %}" alt="{% raw %}{{ image.alt }}{% endraw %}">
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</script>

    {% if settings.related_products_enable %}
    {% assign grid_item_width = 'large--one-fifth medium--one-third small--one-half' %}   

    {% include 'related-products' %}
   
    {% endif %}

    {% if settings.product_reviews_enable %}
<hr>
<div id="shopify-product-reviews" data-id="{{ product.id }}">{{ product.metafields.spr.reviews }}</div>
    {% endif %}

    {% if settings.product_image_zoom_enable %}
{{ 'jquery.zoom.min.js' | asset_url | script_tag }}
    {% endif %}
{% endcomment %}
