{% if customer %}
    <div>{{ 'products.price.private' | t }}</div>
{% else %}
    <div>{{ 'products.price.public' | t }}</div>
{% endif %}
{% if settings.show_prices_with_taxes %}
    {% include 'product/price/static', price: product.price_with_tax %}
    {% include 'product/price/dynamic', price_name: 'actualPriceWithTax' %}
{% else %}
    {% include 'product/price/static', price: product.price %}
    {% include 'product/price/dynamic', price_name: 'actualPrice' %}
{% endif %}
<!-- TODO: Replace with product unit -->
<span class="price-unit">/ each</span>
