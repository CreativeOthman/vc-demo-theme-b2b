 {% form 'customer_login' %}

<fieldset ng-keypress="login($event)">

    <div class="form-group">
        <vc-labeled-input value="userName" form="customer_login" name="customer[user_name]" placeholder="{{ 'customer.sign-in.user_name' | t }}" required="true"></vc-labeled-input>
        <vc-labeled-input value="password" form="customer_login" name="customer[password]" placeholder="{{ 'customer.sign-in.password' | t }}" type="password" required="true"></vc-labeled-input>
    </div>

    {% if template != 'customers/login' %}
    <div class="form-group">
        {% include 'customers/forgot-links' %}
    </div>
    {% endif %}

    {% if template != 'customers/login' %}
    <div class="row">
        <div class="col-md-8">
            {% else %}
            <div class="form-group">
                {% endif %}
                <button class="btn btn-primary btn-block">{{ 'customer.sign-in.sign_in' | t }}</button>
                {% if template != 'customers/login' %}
            </div>
            {% endif %}
            {% if template != 'customers/login' %}
            <div class="col-md-4">
                {{ 'layout.customer.register' | t | customer_register_link | replace: 'a href', 'a class="btn btn-link" href' }}
            </div>
            {% endif %}
        </div>

        {% if template == 'customers/login' %}
        <div class="form-group">
            {% include 'customers/forgot-links' %}
        </div>
        {% endif %}
</fieldset>
{% endform %}
