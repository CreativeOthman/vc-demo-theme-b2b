{% comment %}
  Toggle between collection.liquid and collection.list.liquid with the 'view' query parameter.
{% endcomment %}
<a title="{{ 'collections.general.list_view' | t }}" class="search-view" vc-query="{ view: 'list' }" ng-class="{'well well-sm': $collection.view === 'list'}">
    <i class="fa fa-list-ul"></i>
    <span>{{ 'collections.general.list_view' | t }}</span>
</a>
<a title="{{ 'collections.general.grid_view' | t }}" class="search-view" vc-query="{ view: 'grid' }" ng-class="{'well well-sm': $collection.view === 'grid'}">
    <i class="fa fa-th"></i>
    <span>{{ 'collections.general.grid_view' | t }}</span>
</a>
