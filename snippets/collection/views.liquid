{% comment %}
  Toggle between collection.liquid and collection.list.liquid with the 'view' query parameter.
{% endcomment %}
<div class="views" vc-query-target="$collection.viewQuery">
    <a title="{{ 'collections.general.list_view' | t }}" class="search-view" vc-query-source="{ view: 'list' }" query-type="replace" ng-class="{'well well-sm': $collection.viewQuery.view === 'list'}">
        <i class="fa fa-list-ul"></i>
        <span>{{ 'collections.general.list_view' | t }}</span>
    </a>
    <a title="{{ 'collections.general.grid_view' | t }}" class="search-view" vc-query-source="{ view: 'grid' }" query-type="replace" ng-class="{'well well-sm': $collection.viewQuery.view === 'grid'}">
        <i class="fa fa-th"></i>
        <span>{{ 'collections.general.grid_view' | t }}</span>
    </a>
</div>
